<div class="col-md-8">

        <div class="panel panel-default">
          <!-- 顯示已評論餐廳的清單 -->
          <div class="panel-heading">
            <h3 class="panel-title">朋友專欄(追蹤你的朋友)</h3>
          </div>

          <div class="panel-body">
            <% @user.frienders.each do |friender| %>
              
                <div class="my-restaurant">
                  <div>
                    <% if friender.avatar.url %>
                      <%= image_tag friender.avatar.url %>
                    <% else %>
                      <%= image_tag "http://via.placeholder.com/100x100", class: "img-rounded" %>
                    <% end %>
                  </div>
                  <h5><%= friender.name %></h5>
                </div>
              
            <% end %>
          </div>
        </div>
</div>